{
    "name": "truth-chain",
    "version": "0.1.1",
    "description": "Immutable document verification system on Solana blockchain",
    "scripts": {
        "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
        "dev:frontend": "npm run dev --prefix frontend",
        "dev:backend": "cd backend && uvicorn main:app --reload",
        "build": "npm run build --prefix frontend",
        "build:anchor": "anchor build",
        "test": "anchor test",
        "deploy:anchor": "anchor deploy",
        "lint": "eslint . --ext .ts"
    },
    "dependencies": {
        "@coral-xyz/anchor": "^0.29.0",
        "@solana/web3.js": "^1.87.6"
    },
    "devDependencies": {
        "@types/chai": "^4.3.11",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.10.5",
        "chai": "^4.3.10",
        "concurrently": "^9.2.1",
        "mocha": "^10.2.0",
        "ts-mocha": "^10.0.0",
        "typescript": "^5.3.3"
    }
}